public class AnonymousUser extends User
{
    public String getEmailAddress(){
       throw new RuntimeException("Anonymous users don't have an email address."); 
    }
}
public class User
{
    private String emailAddress;
    public String getEmailAddress(){
       return this.emailAddress;
    }
}
